{
  "compilerOptions": {
    "outDir": "build/",
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "declaration": true,
    "noLib": false,
    "noEmitHelpers": true,
    "experimentalDecorators": true,
    "lib": [
      "es6",
      "dom"
    ],
    "typeRoots": [
      "./references.d.ts"
    ]
  },
  "exclude": [
    "node_modules",
    "src/platforms"
  ]
}
